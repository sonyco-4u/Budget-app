<div class="menu_bar">
  <%= render partial: 'shared/menu', locals: { title: 'Add Category', menu_path: root_path } %>
</div>

<section class="edit_add_page category">
  <%= form_with model: @category, url: categories_path, local: true do |f| %>
    <%= f.text_field :name, autofocus: true, placeholder: "Category name" %>
    <%= f.file_field :icon %>
    <div class="form_btn">
      <%= f.submit "Create Category", class: 'list_btn' %>
      <button class="list_btn"><%= link_to "Back", categories_path %></button>
    </div>
  <% end %>
</section>