<div class="menu_bar">
  <%= render partial: 'shared/menu', locals: { title: 'Edit Expense', menu_path: root_path } %>
</div>

<section class="edit_add_page category">
  <%= form_with model: @expense, url: category_expense_path(category_id: @category.id, id: @expense.id), local: true do |f| %>
    <%= f.text_field :name, autofocus: true %>
    <%= f.number_field :amount, autofocus: true %>
    <%= f.file_field :icon %>
    <div class="form_btn">
      <%= f.submit "Update Expense", class: 'list_btn' %>
      <button class="list_btn"><%= link_to "Back", category_expense_path(category_id: @category.id, id: @expense.id) %></button>
    </div>
  <% end %>
</section>